<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>CHAT.Io</title>
</head>
<body>
    <h1>CHAT DO REMIXO</h1>
    <h3>Por favor, insira seu nome logo abaixo e venha conversar conosco!</h3>
    <div>
        
        <form action="/chat">
            <input type="text"  id="user" placeholder=""><br>
            <button onclick="entrar()">Entrar</button>
        </form>
    </div>
    
</body>
    <script>
        function entrar() {
        

            const form = document.querySelector('form')
            var userName = document.getElementById("user")
            

            var user = userName.value
            
            if(/^\s*$/.test(user)){
                alert("Por favor, digite um nome de usuÃ¡rio :c")
                form.addEventListener('submit', (event) => {
                    userName.addEventListener("focus", function() {
                        userName.placeholder = "Aqui aqui aqui"
                    })
                    event.preventDefault()
                })
            } else{
                localStorage.setItem("key", user)
            }
            

        }
    </script>
</html>